{{#if session.currentUser }}
  <h2>Logged in as, {{session.currentUser}}</h2>
  {{else}}
  <h1>Login</h1>
  <div class="field">
    <label>Email</label>
    {{input value=email}}
  </div>
  <div class="field">
    <label>Password</label>
    {{input value=password type="password"}}
  </div>
  <div class="btn btn-primary" {{action 'login'}}>Login</div>
{{/if}}
