{{log session.currentUser.[0].email}}
{{#if session.currentUser }}
  <h2>Logged in as, {{session.currentUser.[0].firstName}}</h2>
  {{else}}
  <form>
    <h1>Login</h1>
    <div class="field">
      <label>Email</label>
      {{input value=email}}
    </div>
    <div class="field">
      <label>Password</label>
      {{input value=password type="password"}}
    </div>

    <button class='btn'{{action 'login'}}>Login</button>
  </form>
{{/if}}
