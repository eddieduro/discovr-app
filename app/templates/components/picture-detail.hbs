<img src={{picture.dataURL}} alt="picture.description" class="uploaded-pictures"/>
<button {{action 'formShow'}}>Edit Details</button>
<div class="container">
  {{#if formHide}}
    <div class="edit-form">
      <form class="uploaded-picture-form">
        <label for="description">Description</label>
        {{input type=text value=description}}
        <label for="tags">Tags</label>
        {{input type=text value=tags}}
        <button {{action "updateDetails" picture}}>Submit</button>
        <button {{action "deleteImage" picture}}>Delete</button>
      </form>
    </div>
  {{/if}}
</div>
